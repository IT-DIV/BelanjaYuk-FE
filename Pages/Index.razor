@page "/"
@using BelanjaYuk.Client.Services
@using BelanjaYuk.Client.Models.Response
@using BelanjaYuk.Client.Components.Common
@using Microsoft.Extensions.Configuration
@inject AuthService AuthService
@inject CategoryService CategoryService
@inject ProductService ProductService
@inject CartService CartService
@inject NavigationManager Navigation
@inject IConfiguration Configuration

<link rel="stylesheet" href="css/pages/homepage.css" />
<link rel="stylesheet" href="css/components/add-to-cart-modal.css" />

<NavBar SearchQuery="@searchQuery" OnSearchChanged="HandleSearchChanged" />

<div class="main-content">
    <div class="content-layout @(isAuthenticated ? "has-profile" : "")">
        <div class="hero-card">
            <h1 class="hero-title">Belanja jadi mudah, cepat, dan hemat</h1>
            <p class="hero-desc">Nikmati pengiriman cepat dan banyak pilihan produk favorit.</p>

            <div class="category-pills">
                <button class="category-pill @(selectedCategory == null ? "active" : "")" @onclick="() => SelectCategory(null)">
                    Semua
                </button>
                @foreach (var category in categories)
                {
                    <button class="category-pill @(selectedCategory == category.IdCategory ? "active" : "")" @onclick="() => SelectCategory(category.IdCategory)">
                        @category.CategoryName
                    </button>
                }
            </div>
        </div>

        @if (isAuthenticated && !string.IsNullOrEmpty(username))
        {
            <div class="profile-card">
                <div class="profile-avatar">@GetAvatarText()</div>
                <div class="profile-greeting">Hale, @username üëã</div>
                <div class="profile-actions">
                    <button class="btn-profile" @onclick="GoToProfile">Profil</button>
                    <button class="btn-orders" @onclick="GoToHistory">Lihat Pesanan</button>
                </div>
            </div>
        }
    </div>

    <div class="products-section">
        @if (isLoading)
        {
            <div class="no-products">Memuat produk...</div>
        }
        else if (products.Count == 0)
        {
            <div class="no-products">Tidak ada produk untuk kategori ini.</div>
        }
        else
        {
            <div class="products-grid">
                @foreach (var product in products)
                {
                    <div class="product-card">
                        <div class="product-image">
                            @if (product.Images != null && product.Images.Count > 0)
                            {
                                <img src="@GetImageUrl(product.Images[0])" alt="@product.ProductName" />
                            }
                            else
                            {
                                <span>üì¶</span>
                            }
                        </div>
                        <div class="product-info">
                            <div class="product-name">@product.ProductName</div>
                            <div class="product-category">@product.CategoryName</div>
                            <div class="product-price-container">
                                <div>
                                    <span class="product-price">Rp @product.PriceAfterDiscount.ToString("N0")</span>
                                    @if (product.DiscountProduct > 0)
                                    {
                                        <span class="product-discount">@product.DiscountProduct%</span>
                                    }
                                </div>
                                @if (product.DiscountProduct > 0)
                                {
                                    <div class="product-original-price">Rp @product.Price.ToString("N0")</div>
                                }
                            </div>
                            @if (product.AvgRating > 0)
                            {
                                <div class="product-rating">
                                    ‚≠ê @product.AvgRating.ToString("0.0")
                                </div>
                            }
                            <button class="btn-add-to-cart" @onclick="() => HandleAddToCart(product.IdProduct)" disabled="@(!isAuthenticated)">
                                Tambah
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@if (showToast)
{
    <div class="toast @toastClass">
        @toastMessage
    </div>
}

<AddToCartModal IsOpen="showAddToCartModal"
                OnClose="CloseAddToCartModal"
                OnConfirm="ConfirmAddToCart" />

@code {
    private bool isAuthenticated = false;
    private string username = "";
    private string userId = "";
    private string searchQuery = "";
    private string? selectedCategory = null;
    private List<CategoryResponse> categories = new List<CategoryResponse>();
    private List<ProductResponse> products = new List<ProductResponse>();
    private bool isLoading = true;
    private bool showToast = false;
    private string toastMessage = "";
    private string toastClass = "";
    private bool showAddToCartModal = false;
    private string selectedProductId = "";

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();

        if (isAuthenticated)
        {
            var currentUser = await AuthService.GetCurrentUserAsync();
            if (currentUser != null)
            {
                username = currentUser.Username;
                userId = currentUser.IdUser;
            }
            else
            {
                // Token invalid, set isAuthenticated to false
                isAuthenticated = false;
            }
        }

        categories = await CategoryService.GetCategoriesAsync();
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        isLoading = true;

        if (selectedCategory == null)
        {
            products = await ProductService.GetProductsAsync(searchQuery);
        }
        else
        {
            products = await ProductService.GetProductsByCategoryAsync(selectedCategory, searchQuery);
        }

        isLoading = false;
    }

    private async Task SelectCategory(string? categoryId)
    {
        selectedCategory = categoryId;
        await LoadProducts();
    }

    private System.Threading.Timer? searchTimer;

    private async Task HandleSearchChanged(string query)
    {
        searchQuery = query;
        searchTimer?.Dispose();
        searchTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadProducts();
                StateHasChanged();
            });
        }, null, 500, System.Threading.Timeout.Infinite);
    }

    private string GetImageUrl(string imagePath)
    {
        var apiBaseUrl = Configuration["ApiBaseUrl"];
        return $"{apiBaseUrl}{imagePath}";
    }

    private string GetAvatarText()
    {
        if (string.IsNullOrEmpty(username)) return "??";
        if (username.Length < 2) return username.ToUpper();
        return username.Substring(0, 2).ToUpper();
    }

    private void HandleAddToCart(string productId)
    {
        if (!isAuthenticated)
        {
            ShowToast("Anda harus login terlebih dahulu.", "error");
            return;
        }

        selectedProductId = productId;
        showAddToCartModal = true;
    }

    private void CloseAddToCartModal()
    {
        showAddToCartModal = false;
        selectedProductId = "";
    }

    private async Task ConfirmAddToCart(int quantity)
    {
        var result = await CartService.AddToCartAsync(userId, selectedProductId, quantity);

        if (result.Success)
        {
            ShowToast(result.Message, "success");
            CloseAddToCartModal();
        }
        else
        {
            ShowToast(result.Message, "error");
        }
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastClass = type == "success" ? "toast-success" : "toast-error";
        showToast = true;
        StateHasChanged();

        // Hide toast after 3 seconds
        var timer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showToast = false;
                StateHasChanged();
            });
        }, null, 3000, System.Threading.Timeout.Infinite);
    }

    private void GoToProfile()
    {
        Navigation.NavigateTo("/profile");
    }

    private void GoToHistory()
    {
        Navigation.NavigateTo("/history");
    }
}
