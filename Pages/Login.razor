@page "/login"
@using BelanjaYuk.Client.Services
@using BelanjaYuk.Client.Models.Request
@using BelanjaYuk.Client.Components.Icon
@inject AuthService AuthService
@inject NavigationManager Navigation

<link rel="stylesheet" href="css/pages/login.css" />

<div class="login-container">
    <div class="login-wrapper">
        <div class="login-left">
            <div class="feature-card">
                <div class="feature-icon">
                    <div class="skeleton-circle"></div>
                    <div class="skeleton-bar"></div>
                    <div class="skeleton-bar2"></div>
                </div>
                <h2>BelanjaYuk - Lebih fun, lebih cepat</h2>
                <p>UI unggul dengan warna biru cerah, nyaman dilihat, dan fokus pada kemudahan.</p>
                <div class="feature-tabs">
                    <button class="tab-btn active">Gratis ongkir</button>
                    <button class="tab-btn">Bayar COD</button>
                    <button class="tab-btn">Promo harian</button>
                    <button class="tab-btn">Pengiriman Cepat</button>
                </div>
            </div>
        </div>

        <div class="login-right">
            <div class="login-form-container">
                <div class="login-header">
                    <div class="logo">
                        <span class="logo-text">BelanjaYuk</span>
                    </div>
                    <h1 class="text-welcome">Hai, selamat datang kembali ðŸ‘‹</h1>
                    <p class="text-desc">Masuk pakai email atau no. HP yang terdaftar</p>
                </div>

                <form class="login-form" @onsubmit="HandleLogin">
                    <div class="form-group">
                        <label for="email">Email / No HP</label>
                        <input
                            type="text"
                            id="email"
                            placeholder="contoh@email.com / 0812xxx"
                            @bind="email"
                            class="form-input" />
                        <small>Format: email valid atau nomor HP Indonesia.</small>
                    </div>

                    <div class="form-group">
                        <label for="password">Kata Sandi</label>
                        <div class="password-input-wrapper">
                            <input
                                type="@(showPassword ? "text" : "password")"
                                id="password"
                                placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                                @bind="password"
                                class="form-input password-input" />
                            <button type="button" class="btn-toggle-password" @onclick="TogglePasswordVisibility">
                                @if (showPassword)
                                {
                                    <EyeOffIcon Width="20" Height="20" Color="#6b7280" />
                                }
                                else
                                {
                                    <EyeIcon Width="20" Height="20" Color="#6b7280" />
                                }
                            </button>
                        </div>
                    </div>

                    <div class="form-options">
                        <label class="checkbox-label">
                            <input type="checkbox" @bind="rememberMe" />
                            <span>Ingat saya</span>
                        </label>
                        <a href="#" class="forgot-password">Lupa kata sandi?</a>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="api-error">
                            @errorMessage
                        </div>
                    }

                    <button type="submit" class="btn-login" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span>Memproses...</span>
                        }
                        else
                        {
                            <span>Masuk</span>
                        }
                    </button>

                    <div class="divider">
                        <span>atau</span>
                    </div>

                    <button type="button" class="btn-continue-without-account" @onclick="ContinueWithoutAccount">
                        Lanjut tanpa akun
                    </button>

                    <p class="register-prompt">
                        Belum punya akun? <a href="/register">Daftar sekarang</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private bool rememberMe = false;
    private bool isSubmitting = false;
    private string errorMessage = "";
    private bool showPassword = false;

    protected override async Task OnInitializedAsync()
    {
        if (await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/");
        }
    }

    private async Task HandleLogin()
    {
        errorMessage = "";

        if (string.IsNullOrWhiteSpace(email))
        {
            errorMessage = "Email atau No. HP wajib diisi.";
            return;
        }

        if (string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Kata sandi wajib diisi.";
            return;
        }

        if (isSubmitting)
        {
            return;
        }

        isSubmitting = true;

        try
        {
            var request = new LoginRequest
            {
                EmailOrPhone = email,
                Password = password
            };

            var result = await AuthService.LoginAsync(request);

            if (result.Success)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ContinueWithoutAccount()
    {
        Navigation.NavigateTo("/");
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }
}
